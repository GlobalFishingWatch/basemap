{
    "version": 8,
    "glyphs": "https://raw.githubusercontent.com/GlobalFishingWatch/map-gl-glyphs/master/_output/{fontstack}/{range}.pbf?raw=true",
    "sprite": "https://raw.githubusercontent.com/GlobalFishingWatch/map-gl-sprites/master/out/sprites",
    "sources": {
        "bathymetry": {
            "type": "raster",
            "tiles": [
                "https://storage.googleapis.com/public-tiles/basemap/bathymetry/{z}/{x}/{y}.png"
            ],
            "maxzoom": 8
        },
        "basemap_vector": {
            "type": "vector",
            "tiles": [
                "https://storage.googleapis.com/public-tiles/basemap/vector/{z}/{x}/{y}.pbf"
            ],
            "maxzoom": 10
        }
    },
    "layers": [
        {
            "id": "bg",
            "type": "background",
            "paint": {
                "background-color": "#002357"
            }
        },
        {
            "id": "bathymetry",
            "type": "raster",
            "source": "bathymetry"
        },
        {
            "id": "countries",
            "type": "fill",
            "source": "basemap_vector",
            "source-layer": "countries",
            "paint": {
                "fill-color": "#274777"
            }
        },
        {
            "id": "countries_boundaries",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "countries",
            "paint": {
                "line-color": "#ccccff",
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    3,
                    0.2
                ],
                "line-width": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    1,
                    7,
                    4
                ]
            }
        },
        {
            "id": "countries_labels",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "country_centroids",
            "layout": {
                "text-field": "{SHORT_NAME}",
                "text-font": [
                    "Roboto Mono Light"
                ],
                "text-size": 15
            },
            "paint": {
                "text-color": "white",
                "text-opacity":  [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    3,
                    0.5
                ]
            }
        },
        {
            "id": "regions_boundaries",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "regions",
            "paint": {
                "line-color": "#ccccff",
                "line-dasharray": [
                    6,
                    4
                ],
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    5,
                    0,
                    6,
                    0.2
                ]
            }
        },
        {
            "id": "populated_places_1",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["==", ["get", "SCALERANK"], 1],
            "layout": {
                "text-field": "{NAME}",
                "text-font": [
                    "Roboto Mono Light"
                ],
                "text-size": 12,
                "text-offset": [0, -1]
            },
            "paint": {
                "text-color": "white",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    3,
                    0,
                    4,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_dot_1",
            "type": "circle",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["==", ["get", "SCALERANK"], 1],
            "paint": {
                "circle-radius": 2,
                "circle-color": "white",
                "circle-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    3,
                    0,
                    4,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_2345",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["match", ["get", "SCALERANK"], [2, 3, 4, 5], true, false],
            "layout": {
                "text-field": "{NAME}",
                "text-font": [
                    "Roboto Mono Light"
                ],
                "text-size": 10,
                "text-offset": [0, -1]
            },
            "paint": {
                "text-color": "white",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    5,
                    0,
                    6,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_dot_2345",
            "type": "circle",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["match", ["get", "SCALERANK"], [2, 3,4, 5], true, false],
            "paint": {
                "circle-radius": 2,
                "circle-color": "white",
                "circle-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    5,
                    0,
                    6,
                    0.5
                ]
            }
        },
        {
            "id": "graticules_50",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "filter": ["==", ["%", ["get", "degrees"], 50], 0],
            "paint": {
                "line-color": "white",
                "line-width": 1,
                "line-opacity": 0.5
            }
        },
        {
            "id": "graticules_10",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "filter": ["==", ["%", ["get", "degrees"], 10], 0],
            "paint": {
                "line-color": "white",
                "line-width": 1,
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    4,
                    0.5
                ]
            }
        },
        {
            "id": "graticules_5",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "paint": {
                "line-color": "white",
                "line-width": 0.5,
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    5,
                    0,
                    7,
                    0.5
                ]
            }
        }
    ]
}