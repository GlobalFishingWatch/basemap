{
    "version": 8,
    "glyphs": "https://raw.githubusercontent.com/GlobalFishingWatch/map-gl-glyphs/master/_output/{fontstack}/{range}.pbf?raw=true",
    "sprite": "https://raw.githubusercontent.com/GlobalFishingWatch/map-gl-sprites/master/out/sprites",
    "sources": {
        "bathymetry": {
            "type": "raster",
            "tiles": [
                "https://storage.googleapis.com/public-tiles/basemap/bathymetry/{z}/{x}/{y}.png"
            ],
            "maxzoom": 8,
            "attribution": "Bathimetry: NASA"
        },
        "basemap_vector": {
            "type": "vector",
            "tiles": [
                "https://storage.googleapis.com/public-tiles/basemap/vector_2/vector/{z}/{x}/{y}.pbf"
            ],
            "maxzoom": 10,
            "attribution": "Boundaries and country names: GADM"
        }
    },
    "layers": [
        {
            "id": "bg",
            "type": "background",
            "paint": {
                "background-color": "#002357"
            }
        },
        {
            "id": "bathymetry",
            "type": "raster",
            "source": "bathymetry"
        },
        {
            "id": "graticules_30",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "filter": ["==", ["get", "thirties"], true],
            "paint": {
                "line-color": "white",
                "line-opacity": 0.2
            }
        },
        {
            "id": "graticules_10",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "filter": ["==", ["get", "tens"], true],
            "minzoom": 2,
            "paint": {
                "line-color": "white",
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    4,
                    0.2
                ]
            }
        },
        {
            "id": "graticules_1",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "graticules",
            "minzoom": 5,
            "paint": {
                "line-color": "white",
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    5,
                    0,
                    7,
                    0.2
                ]
            }
        },
        {
            "id": "countries",
            "type": "fill",
            "source": "basemap_vector",
            "source-layer": "countries",
            "paint": {
                "fill-color": "#274777"
            }
        },
        {
            "id": "regions_boundaries",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "regions",
            "minzoom": 4,
            "paint": {
                "line-color": "#3D5984",
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    4,
                    0,
                    6,
                    1
                ]
            }
        },
        {
            "id": "countries_boundaries",
            "type": "line",
            "source": "basemap_vector",
            "source-layer": "countries",
            "minzoom": 2,
            "paint": {
                "line-color": "#536F9B",
                "line-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    3,
                    1
                ]
            }
        },
        {
            "id": "populated_places_1",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["==", ["get", "SCALERANK"], 1],
            "minzoom": 3,
            "layout": {
                "text-field": "{NAME}",
                "text-font": [
                    "Roboto Medium"
                ],
                "text-size": 13,
                "text-offset": [0, -0.7]
            },
            "paint": {
                "text-color": "white",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    3,
                    0,
                    4,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_dot_1",
            "type": "circle",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["==", ["get", "SCALERANK"], 1],
            "minzoom": 3,
            "paint": {
                "circle-radius": 2,
                "circle-color": "white",
                "circle-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    3,
                    0,
                    4,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_2345",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["match", ["get", "SCALERANK"], [2, 3, 4, 5], true, false],
            "minzoom": 5,
            "layout": {
                "text-field": "{NAME}",
                "text-font": [
                    "Roboto Medium"
                ],
                "text-size": 12,
                "text-offset": [0, -1]
            },
            "paint": {
                "text-color": "white",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    6,
                    0,
                    7,
                    0.5
                ]
            }
        },
        {
            "id": "populated_places_dot_2345",
            "type": "circle",
            "source": "basemap_vector",
            "source-layer": "populated_places",
            "filter": ["match", ["get", "SCALERANK"], [2, 3,4, 5], true, false],
            "minzoom": 5,
            "paint": {
                "circle-radius": 2,
                "circle-color": "white",
                "circle-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    6,
                    0,
                    7,
                    0.5
                ]
            }
        },
        {
            "id": "countries_labels",
            "type": "symbol",
            "source": "basemap_vector",
            "source-layer": "country_centroids",
            "minzoom": 2,
            "layout": {
                "text-field": "{SHORT_NAME}",
                "text-font": [
                    "Roboto Medium"
                ],
                "text-transform": "uppercase",
                "text-letter-spacing": 0.15,
                "text-line-height": 1,
                "text-size": 12,
                "text-padding" : 30
            },
            "paint": {
                "text-color": "white",
                "text-opacity":  [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    2,
                    0,
                    3,
                    0.5
                ]
            }
        }
    ]
}